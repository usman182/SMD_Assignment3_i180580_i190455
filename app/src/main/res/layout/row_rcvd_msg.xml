<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent">
    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@+id/text_message_body"
        app:layout_constraintTop_toTopOf="@id/parent"
        app:layout_constraintStart_toStartOf="@+id/parent"/>
    <TextView
        android:id="@+id/text_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toStartOf="@+id/parent"
        app:layout_constraintBottom_toBottomOf="@id/parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:text="Message"
        android:textSize="20dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/msg_brown"
        android:textColor="@color/white"
        android:padding="10dp"
        android:paddingEnd="50dp"
        android:gravity="top"
        />
    <TextView
        android:id="@+id/time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:maxLines="1"
        android:text="14:42"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/text_message_body"
        app:layout_constraintEnd_toEndOf="@+id/text_message_body"
        />







</androidx.constraintlayout.widget.ConstraintLayout>